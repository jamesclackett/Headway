<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBeige"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/settings_border"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/units_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Units"
            android:textColor="@color/colorDarkGrey"
            android:textSize="26sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/units_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/SwitchStyle" />
    </LinearLayout>


    <TextView
        android:id="@+id/reset_last_graph_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/settings_border"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:onClick="showDeleteDialog"
        android:paddingLeft="10dp"
        android:text="Reset last graph input"
        android:textColor="@color/colorDarkGrey"
        android:textSize="26sp" />


    <TextView
        android:id="@+id/reset_graph_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/settings_border"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:onClick="showDeleteDialog"
        android:paddingLeft="10dp"
        android:text="Reset graph"
        android:textColor="@color/colorDarkGrey"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/reset_all_data_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/settings_border"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:onClick="showDeleteDialog"
        android:paddingLeft="10dp"
        android:text="Reset all data"
        android:textColor="@color/colorDarkGrey"
        android:textSize="26sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/settings_border"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:onClick="aboutApp"
        android:paddingLeft="10dp"
        android:text="About"
        android:textColor="@color/colorDarkGrey"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />


</LinearLayout>